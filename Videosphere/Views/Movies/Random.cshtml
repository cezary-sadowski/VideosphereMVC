@model Videosphere.ViewModels.RandomMovieViewModel

@{
                /**/

                ViewBag.Title = "Random"; //generalnie tytul strony wyswietlany przez przegladarke.
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--at sign oznacza ze moge wrzucic kod c# pomiedzy html-->

@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}

else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

